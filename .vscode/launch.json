    "version": "0.2.0",
    "configurations": [
        {
            "name": "gem5-test-hfi",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/X86/gem5.opt",
            "args": [
                "configs/example/se.py",
                "--cpu-type=DerivO3CPU",
                "--caches",
                "-c",
                "mybuild/mybuildout/test-hfi",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "gem5-test-hfi-oob-fail",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/X86/gem5.opt",
            "args": [
                "configs/example/se.py",
                "--cpu-type=DerivO3CPU",
                "--caches",
                "-c",
                "mybuild/mybuildout/test-hfi-oob-fail",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}